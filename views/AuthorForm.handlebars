
        <!--main content start-->
 
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-user"></i>UserForm</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="fa fa-user"></i>Forms</li>
                            <li><i class="fa fa-users"></i>UserForm</li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Advanced Table
                            </header>
                                 <div >
                                    <a class="btn btn-primary" href="/author/add" data-toggle="modal">
                                        AddAuthor
                                    </a>
                                 </div>
                            <table class="table table-striped table-advance table-hover">
                                <tbody>
                                    <tr>
                                        <th><i class="icon_image"></i> Image </th>
                                        <th><i class="icon_profile"></i> Name</th>
                                        <th><i class="icon_calendar"></i> Date Of Birdth</th>
                                        <th><i class="icon_calendar"></i> Date_Created</th>
                                        <th><i class="icon_calendar"></i> Date_Update</th>
                                        <th><i class="icon_mail_alt"></i> Email</th>
                                        <th><i class="icon_check"></i> Status</th>
                                        <!--<th><i class="icon_profile"></i> User_update</th>-->
                                        <th><i class="icon_cogs"></i> Action</th>
                                         
                                    </tr>
                                        {{#each Author}}
                                    <tr>
                                        <td><img src="/img/{{image}}" style="width : 100px; height : 100px"></td>
                                        <td>{{name}}</td>
                                        <td>{{dob}}</td>
                                        <td>{{date_created}}</td>
                                        <td>{{date_update}}</td>
                                        <td>{{email}}</td>
                                        <td> {{active}}</td>
                                       <!-- <td>{{user.name}}</td>-->
                                        
                                        <td>
                                            <div class="btn-group">
                                               
                                                <a class="btn btn-success" href="../Author/edit/{{id}}"><i class="icon_pencil"></i></a>
                                                <a class="btn btn-danger" href="../author/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icon_close_alt2"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
    