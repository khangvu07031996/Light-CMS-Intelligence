                                    <a href="" id="btn_clear">Clear</a>
                        </div>

                        <div class="clear"></div>
                    </div>
                </div>

                <div id="item_container">


                    {{#each images}}
                    <div class="item" id="div_{{_id}}" ondrop="drop(event)" ondragover="allowDrop(event)">
