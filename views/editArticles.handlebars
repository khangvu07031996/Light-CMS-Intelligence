<!-- Form validations -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <div class="form">
                   
                    <form method="post" action="/Article/edit/{{article.id}}" class="form-validate form-horizontal save">
                         <div class = "col-lg-8">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Headline <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="headline" minlength="5" type="text" value="{{article.headline}}" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> section <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="section_selection" name = "section" >
                                    {{#each Section}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">  premble <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea class="col-lg-12" name = "premble"> {{article.premble}}</textarea>
                            </div>
                        </div>
						
						 <div class="form-group">
                           <div class="col-lg-2">
                                 <div class="col-lg-12 col-md-offset-5" style="">
                                    <label class="" for="cname" class="control-label"> File : <span class="required">*</span></label>
                                </div>
                                <div class="col-lg-12 col-md-offset-5"  id = "divajax">
                                            <div class="btn btn-info image-preview-input">
                                            <span class="glyphicon glyphicon-folder-open"></span>
                                            {{!-- <input type="file" multiple accept="image/png, image/jpeg, image/gif" name="file" /> --}}
                                            <input style="display: block; margin:0px ;width:50px;" type="file" id="files" name="files" multiple accept="image/*">
                                            <!-- rename it -->
                                        </div> 
                                </div>
                                <button type="button" id = "btnPopup2" class="btn btn-info btn-lg col-lg-7 col-lg-offset-6" data-toggle="modal" data-target="#myModal" style="font-size: 15px;margin-top: 7px;">+</button>
                               
                           </div >
                                <div class="col-md-10">                               
									<div class="col-md-12" id="divimg">
										{{#each arrImg}}
