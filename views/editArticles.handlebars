<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-files-o"></i> Add Article</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Forms</li>
            <li><i class="fa fa-files-o"></i>AddArticle</li>
        </ol>
    </div>
</div>
<!-- Form validations -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <div class="form">
                   
                    <form method="post" action="/Article/edit/{{article.id}}" class="form-validate form-horizontal save">
                         <div class = "col-lg-8">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Headline <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="headline" minlength="5" type="text" value="{{article.headline}}" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> section <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="section_selection" name = "section" >
                                    {{#each Section}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">  premble <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea class="col-lg-12" name = "premble"> {{article.premble}}</textarea>
                            </div>
                        </div>
						
						
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="col-lg-12 col-md-offset-5" style="">
                                        <label class="" for="cname" class="control-label"> File : <span class="required">*</span></label>
                                    </div>
                                    <div class="col-lg-12 col-md-offset-5" id="divajax">
                                        <div class="btn btn-info image-preview-input">
                                            <span class="glyphicon glyphicon-folder-open"></span> {{!-- <input type="file"
                                                multiple accept="image/png, image/jpeg, image/gif" name="file" /> --}}
                                            <input style="display: block; margin:0px ;width:50px;" type="file" id="files" name="files" multiple accept="image/*">
                                            <!-- rename it -->
                                        </div>
                                    </div>
                                    <button type="button" id="btnPopup2" class="btn btn-info btn-lg col-lg-7 col-lg-offset-6" data-toggle="modal" data-target="#myModal"
                                        style="font-size: 15px;margin-top: 7px;">+</button>

                                </div>
                                <div class="col-md-10">
                                    <div class="col-md-12" id="divimg">
                                        {{#each arrImg}}
                                        <div class="item icart">
                                            <div class="divrm">
                                                <a onclick="removeSelectedImage(this)" class="remove ' + '">&times;</a>
                                            </div>
                                            <img src="{{src}}" id="{{id}}" draggable="true" style="width : 75px; height : 70px">
                                        </div>
                                        {{/each}}


                                    </div>
                                    <input type="hidden" id="imgPaths" name="imgPaths" value="">



                                </div>


                            </div>

                            <div class="form-group">
                                <div class="col-md-2"></div>

                                <div class="col-md-10">
                                    <div id="imgtab" class="tabcontent" class="col-md-6 col-md-offset-4">
                                        <span onclick="this.parentElement.style.display='none'" class="topright">x</span>
                                        <br />
                                        <div>
                                            <div>
                                                <input type="radio" name="cropimage" value="auto" checked="checked">automatical<br>
                                                <input type="radio" name="cropimage" value="manual">manual<br>

                                                <br />
                                                <input type="button" class="btn btn-info" id="btnCrop" value="Crop" style="display: true" />
                                            </div>

                                            <div class="demo-container" id="divImgSelected">

                                                {{!-- <img id="imgsrc0" src=""></img> --}}

                                            </div>

                                            <div class="demo-container2" style=" height: 5px">
                                                <canvas id="myCanvas" style="display: none"></canvas>
                                            </div>

                                        </div>
                                        <div>
                                            <input type="hidden" id="imgid" name="imgid" value="">
                                        </div>

                                        <div>
                                            <div>
                                                <label for="heading">Heading:</label>
                                                <input id="heading" type="text" class="form-control" name="heading">
                                            </div>
                                            <div>
                                                <label for="description">Description:</label> â€‹
                                                <textarea id="description" rows="5" class="col-md-12"></textarea>
                                            </div>
                                            <div>
                                                <label for="photographer">Photographer:</label>
                                                <input id="photographer" type="tel" class="form-control" name="photographer">
                                            </div>

                                            <br />
                                            <div class="pull-right">
                                                <button id="btnImgInfo" type="button" class="btn btn-primary">Save</button>


                                            </div>

                                        </div>
                                    </div>
                                </div>


                            </div>

                   
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">  body <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea class="body" name = "body">{{article.body}}</textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Status <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="sel1" name = "status" >
                                    <option>Save Draft</option>
                                    <option>Published</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Tags <span class="required">*</span></label>
                            <div class="col-lg-10">
                               <button class="btn btn-info col-lg-4" id = "press_me" type="button">generator</button>
                                <input class = "form-control col-lg-8" type="text" data-role="tagsinput"  id ="result" value="{{article.tags}}"  data-role="" name = "tags"/>
                            </div>
                        </div>
                        
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Author <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="author_selection" name = "author" multiple="multiple">
                                    {{#each Author}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                    {{#each arr}}
                                    <option selected="selected">{{this}}</option>
                                    {{/each}}
                                </select>
                        
                            </div>
                        </div>
                         
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> widgets <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="widgets" minlength="5" value="{{article.widgets}}" type="text" required />
                            </div>
                        </div>  
                         <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> CreateBy <span class="required">*</span></label>
                            <div class="col-lg-10">
                                 <input class="form-control" id="cname" name="CreateBy" value= "{{user.username}}" minlength="5" type="text" required />
                                
                            </div>
                        </div>
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit" style="width: 50%;">Save</button>
                        </div>
                    </div>
                    
                    </form>
                </div>

            </div>
        </section>
    </div>

</div>

<!-- page end-->

