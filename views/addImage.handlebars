<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-files-o"></i> Form Validation</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Forms</li>
            <li><i class="fa fa-files-o"></i>Add image</li>
        </ol>
    </div>
</div>
<!-- Form validations -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Form validations
            </header>
            <div class="panel-body">
                <div class="form">

                    <form action="" method="post" class="form-horizontal">
                        <div class="form-group ">
                            <label class="control-label col-lg-3" for="cname" class="control-label"> File : <span class="required">*</span></label>
                            <div class="col-lg-6 ">
                                
                                <div class="">
                                    <input style="display: block;" type="file" id="files" name="files" multiple accept="image/*">
                                </div>

                            </div>
                            <br />

                            <div class="col-md-2"></div>

                            <div class="col-md-10">
                                <div class="col-md-12" id="divimg"></div>
                            </div>

                            <input type="hidden" id="imgid" name="imgid" value="">
                        </div>


                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-3"> Heading <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input id="heading" type="text" class="form-control" name="heading">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-3"> Description <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <textarea id="description" name="description" rows="5" class="col-md-12"></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-3"> Photographer <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input id="photographer" type="tel" class="form-control" name="photographer">
                            </div>
                        </div>
                         <div>
                            <input type="hidden" id = "usercreate" name="usercreate" value="{{user.username}}">
                       </div>
                        <div class="form-group ">
                            <div class="col-lg-offset-3 col-lg-6">
                                <button class="btn btn-primary" type="button" id="btnInsertImage">submit</button>

                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>
