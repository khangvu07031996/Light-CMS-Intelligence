                                        </div>


                                    </form>
                                </div>


                                <!-- Trigger the modal with a button -->

                              


                           
                        </div>
                        
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> Status <span class="required">*</span></label>
                            <div class="col-md-10">
                                <select class="form-control" id="sel1" name = "status" >
                                    <option>Save Draft</option>
                                    <option>Published</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> tags <span class="required">*</span></label>
                            <div class="col-md-10">
                                <input class="form-control" id="cname" name="tags" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> Author <span class="required">*</span></label>
                            <div class="col-md-10">
                                <select class="form-control" id="author_selection" name = "author" multiple="multiple">
                                    {{#each Author}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                         
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> widgets <span class="required">*</span></label>
                            <div class="col-md-10">
                                <input class="form-control" id="cname" name="widgets" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> Date Created <span class="required">*</span></label>
                            <div class="col-md-10">
                                <div class='input-group date' id='datetimepicker2'>
                                    <input type='text' class="form-control" name="date_created" />
                                    <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> Date Publish <span class="required">*</span></label>
                            <div class="col-md-10">
                                <div class='input-group date' id='datetimepicker3'>
                                    <input type='text' class="form-control" name="publishDate" />
                                    <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                         <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> CreateBy <span class="required">*</span></label>
                            <div class="col-md-10">
                                 <input class="form-control" id="cname" name="CreateBy" value= "{{user.username}}" minlength="5" type="text" required />
                                
                            </div>
                        </div>
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-primary" type="submit" style="width: 50%;">Save</button>
                             <button class="btn btn-success" type="submit" style="width: 49%;">Publish</button>
                        </div>
                    </div>
                    
                    </form>
                </div>

            </div>
        </section>
    </div>

