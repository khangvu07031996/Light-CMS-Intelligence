 <link href="/css/image.css" rel="stylesheet">   

 <script src="/Scripts/img.js" type="text/javascript"></script>


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-files-o"></i> Add Article</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Forms</li>
            <li><i class="fa fa-files-o"></i>AddArticle</li>
        </ol>
    </div>
</div>
<!-- Form validations -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            </header>
            <div class="panel-body">
                <div class="form" >
                   
                    <form method="POST" action="/article/add" class="form-validate form-horizontal save" id = "save">
                    <div class = "col-lg-8">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Headline <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="headline" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Section <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="section_selection" name = "section" >
                                    {{#each Section}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">  Premble <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea class="col-lg-12" name = "premble"> </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div style="display: flex;">
                                <button type="button" id = "btnPopup2" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">+</button>
                               &nbsp Files: <input style="display: block;" type="file" id="files" name="files" multiple accept="image/*">
                           </div>                               
                                <div id="divimg"></div>
                                <div id="imgtab" class="tabcontent">
                                    <span onclick="this.parentElement.style.display='none'" class="topright">x</span>
                                    <div >
                                        <div class="form-group">
                                            <label for="heading">Heading:</label>
                                            <input type="text" class="form-control" name="heading">
                                        </div>
                                        <div class="form-group">
                                            <label for="description">Description:</label>
                                            <input type="text" class="form-control" name="description">
                                        </div>
                                        <div class="form-group">
                                            <label for="photographer">Photographer:</label>
                                            <input type="tel" class="form-control" name="photographer">
                                        </div>

                                        <div class="form-group">
                                            <div class="">
                                                <button type="submit" class="btn btn-primary">Submit</button>

                                                <button type="reset" class="btn btn-default">Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>   
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">  Body <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <textarea class = "body" id="source" name = "body"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-2"> Image <span class="required">*</span></label>
                            <div class="input-group image-preview col-lg-10" style="padding-left:15px ; padding-right:15px;">
                                <input type="text" class="form-control image-preview-filename" name="images">
                                <!-- don't give a name === doesn't send on POST/GET -->
                                <span class="input-group-btn">
                                                    <!-- image-preview-clear button -->
                                    <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                            <span class="glyphicon glyphicon-remove"></span>Clear
                                    </button>
                                <!-- image-preview-input -->
                                <div class="btn btn-default image-preview-input">
                                    <span class="glyphicon glyphicon-folder-open"></span>
                                    <span class="image-preview-input-title">Browse</span>
                                    <input type="file" accept="image/png, image/jpeg, image/gif" name="file" />
                                    <!-- rename it -->
                                </div>
                                </span>
                            </div>
                        </div>
                        
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Status <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="sel1" name = "status" >
                                    <option>Save Draft</option>
                                    <option>Published</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Tags <span class="required">*</span></label>
                            <div class="col-lg-10">
                               <button class="btn btn-info col-lg-4" id = "press_me">generator</button>
                                <input class = "form-control col-lg-8" type="text" data-role="tagsinput"  id ="result" value="" data-role="" name = "tags"/>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Author <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <select class="form-control" id="author_selection" name = "author" multiple="multiple">
                                    {{#each Author}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                         
                        <div class="form-group ">
                            <label class="control-label col-lg-2"> Widgets </label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="widgets" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Date Created <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <div class='input-group date' id='datetimepicker2'>
                                    <input type='text' class="form-control" name="date_created" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> Date Publish <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <div class='input-group date' id='datetimepicker3'>
                                    <input type='text' class="form-control" name="publishDate" />
                                    <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                         <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2"> CreateBy<span class="required">*</span></label>
                            <div class="col-lg-10">
                                 <input class="form-control" id="cname" name="CreateBy" value= "{{user.username}}" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="col-lg-offset-2 col-lg-10" >
                            <button   class="btn btn-primary" type="submit" style="width: 50%;" >Save</button>
                             <button class="btn btn-success" type="submit" style="width: 49%;">Publish</button>
                        </div>
                    </div>
                    
                    </form>
                </div>

            </div>
        </section>
    </div>

</div>

<!-- page end-->

<label>--</label>
<br />

<!-- Trigger the modal with a button -->

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg" style="width:100% !important; height:100% !important">
        <div class="modal-content" style="width:100% !important; height:100% !important">
            
            <div class="modal-body" style="width:100% !important; height: 81%; overfolw: auto;">


                <div id="cart_container">

                    <div id="cart_toolbar">
                        <div id="cart_items" class="back">

                        </div>
                    </div>
                    <div id="navigate">
                        <div id="nav_left">
                            <a href="" id="btn_prev">
                                <</a>
                                    <a href="" id="btn_next">></a>
                                    <a href="" id="btn_clear">Clear</a>
                        </div>

                        <div class="clear"></div>
                    </div>
                </div>

                <div id="item_container">


                    {{#each data}}
                    <div class="item" id="div_{{_id}}" ondrop="drop(event)" ondragover="allowDrop(event)">
                        <img src="{{media}}/{{medialist.articlePreview}}" draggable="true" id="{{_id}}" style="width : 75px; height : 70px">
                    </div>
                    {{/each}}

                    <div class="clear"></div>
                </div>


            </div>

            <div class="modal-footer" style="width:100% !important; height:9% !important">
                <button id="btnOk" type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

