                                <input class="form-control" id="cname" name="headline" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2"> section <span class="required">*</span></label>
                            <div class="col-md-10">
                                <select class="form-control" id="section_selection" name = "section" >
                                    {{#each Section}}
                                    <option>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2">  premble <span class="required">*</span></label>
                            <div class="col-md-10">
                                <textarea class="col-md-12" name = "premble"> </textarea>
                            </div>
                        </div>
                   
                        <div class="form-group ">
                            <label for="cname" class="control-label col-md-2">  body <span class="required">*</span></label>
