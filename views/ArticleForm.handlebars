
        <!--main content start-->
 
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-user"></i>ArticleForm</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                            <li><i class="fa fa-user"></i>Forms</li>
                            <li><i class="fa fa-users"></i>ArticleForm</li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Advanced Table
                            </header>
                                 <div style="display:inline-flex">
                                    <a class="btn btn-primary" href="/addArticles" data-toggle="modal">
                                        AddArtcle Publish
                                    </a>
                                    <form class="navbar-form" action = "/Article/search" method = "post">
                                         <input class="form-control" name = "terms" placeholder="Search" type="text" style="height:33px;
                                         margin-top:0px">
                                    </form>
                                 </div>
                            <table class="table table-striped table-advance table-hover col-lg-12">
                                <tbody>
                                    <tr>
                                        <th><i class="icon_book"></i> Headline </th>
                                        <th><i class="icon_profile"></i> Section </th>
                                          <th><i class="icon_check"></i> Premble</th>
                                        
                                       <th><i class="icon_check"></i> Status</th>
                                        <th><i class="icon_check"></i> CreateBy</th>
                                        <!--<th><i class="icon_profile"></i> User_update</th>-->
                                        <th><i class="icon_cogs"></i> Action</th>
                                         
                                    </tr>
                                        {{#each articles}}
                                    <tr>
                                        <td>{{headline}}</td>
                                        <td>{{section}}</td>
                                        <td>{{premble}}</td>
                                       
                                        <td> {{status}}</td>
                                        <td>{{CreateBy}}</td>
                                       <!-- <td>{{user.name}}</td>-->
                                        
                                        <td>
                                            <div class="btn-group">
                                               
                                                <a class="btn btn-success" href="../Article/edit/{{id}}"><i class="icon_pencil"></i></a>
                                                <a class="btn btn-danger" href="../Article/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icon_close_alt2"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                   {{/each}}
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
    